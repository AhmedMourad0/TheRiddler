<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/multi_card_margin_bottom"
    android:layout_marginEnd="@dimen/text_card_margin_end"
    android:layout_marginLeft="@dimen/text_card_margin_start"
    android:layout_marginRight="@dimen/text_card_margin_end"
    android:layout_marginStart="@dimen/text_card_margin_start"
    android:layout_marginTop="@dimen/multi_card_margin_top"
    app:backgroundTint="@color/colorCardBackground"
    app:cardCornerRadius="@dimen/multi_card_corner_radius"
    app:cardElevation="@dimen/multi_card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/multi_question_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.3"
            android:paddingEnd="@dimen/multi_text_padding_end"
            android:paddingTop="@dimen/multi_text_padding_top"
            android:paddingBottom="@dimen/multi_text_padding_bottom"
            android:paddingStart="@dimen/multi_text_padding_start"
            android:textColor="@android:color/black"
            android:textSize="@dimen/multi_text_text_size"
            tools:text="@string/question_1"
            android:paddingRight="@dimen/multi_text_padding_end"
            android:paddingLeft="@dimen/multi_text_padding_start" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/multi_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.v7.widget.CardView>
